<bundle version="${version}">
  <workflow name="${workflow-name}_${novoalign2-version}" version="${version}" seqware_version="${seqware-version}"
  basedir="${workflow_bundle_dir}/Workflow_Bundle_${workflow-name}/${version}">
        <description>${workflow-description}</description>
    <test command="java -jar ${workflow_bundle_dir}/Workflow_Bundle_${workflow-name}/${version}/lib/seqware-distribution-${seqware-version}-full.jar --plugin net.sourceforge.seqware.pipeline.plugins.WorkflowLauncher -- --no-metadata --provisioned-bundle-dir ${workflow_bundle_dir} --workflow ${workflow-name}_${novoalign2-version} --version ${version} --ini-files ${workflow_bundle_dir}/Workflow_Bundle_${workflow-name}/${version}/config/workflow_${novoalign2-version}.ini"/>
    <workflow_command command="java -jar ${workflow_bundle_dir}/Workflow_Bundle_${workflow-name}/${version}/lib/seqware-distribution-${seqware-version}-full.jar --plugin net.sourceforge.seqware.pipeline.plugins.WorkflowLauncher -- --bundle ${workflow_bundle_dir} --workflow ${workflow-name}_${novoalign2-version} --version ${version} "/>
        <workflow_template path=""/>
    <workflow_class path="${workflow_bundle_dir}/Workflow_Bundle_${workflow-name}/${version}/classes/${workflow-package}/${workflow-name}Workflow.java"/>
    <config path="${workflow_bundle_dir}/Workflow_Bundle_${workflow-name}/${version}/config/workflow_${novoalign2-version}.ini"/>
    <build command="ant -f ${workflow_bundle_dir}/Workflow_Bundle_${workflow-name}/${version}/build.xml"/>
    <requirements compute="single" memory="20M" network="local"  workflow_engine="Oozie" workflow_type="java"/>
    </workflow>
