<bundle version="${version}">
  <workflow name="${project.artifactId}_${novoalign2-version}" version="${novoalign2-version}" seqware_version="${seqware-version}"
  basedir="${workflow_bundle_dir}/Workflow_Bundle_${project.artifactId}/${version}">
    <description>${workflow-description}</description>
    <test command="java -jar ${workflow_bundle_dir}/Workflow_Bundle_${project.artifactId}/${version}/lib/seqware-distribution-${seqware-version}-full.jar --plugin net.sourceforge.seqware.pipeline.plugins.WorkflowLauncher -- --no-metadata --provisioned-bundle-dir ${workflow_bundle_dir} --workflow ${project.artifactId}_${novoalign2-version} --version ${novoalign2-version} --ini-files ${workflow_bundle_dir}/Workflow_Bundle_${project.artifactId}/${version}/config/workflow_${novoalign2-version}.ini"/>
    <workflow_command command="java -jar ${workflow_bundle_dir}/Workflow_Bundle_${project.artifactId}/${version}/lib/seqware-distribution-${seqware-version}-full.jar --plugin net.sourceforge.seqware.pipeline.plugins.WorkflowLauncher -- --bundle ${workflow_bundle_dir} --workflow ${project.artifactId}_${novoalign2-version} --version ${novoalign2-version} "/>
    <workflow_template path=""/>
    <workflow_class path="${workflow_bundle_dir}/Workflow_Bundle_${project.artifactId}/${version}/classes/${workflow-package}/${project.artifactId}Workflow.java"/>
    <config path="${workflow_bundle_dir}/Workflow_Bundle_${project.artifactId}/${version}/config/workflow_${novoalign2-version}.ini"/>
    <build command="ant -f ${workflow_bundle_dir}/Workflow_Bundle_${project.artifactId}/${version}/build.xml"/>
    <requirements compute="single" memory="20M" network="local"  workflow_engine="Oozie" workflow_type="java"/>
  </workflow>
